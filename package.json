{
  "name": "dipstick",
  "version": "0.1.0",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "bin": {
    "codegen": "dist/cli/codegen.js"
  },
  "files": [
    "dist/lib",
    "dist/cli"
  ],
  "scripts": {
    "build": "npm run build:lib && npm run build:cli && npm run build:example",
    "build:lib": "tsc -p tsconfig.lib.json",
    "build:cli": "tsc -p tsconfig.cli.json",
    "build:example": "npm exec codegen ./example/module-test/tsconfig.json --verbose",
    "clean": "rm -rf dist/* && rm -rf example/**/*.generated.ts",
    "test": "jest"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "ts-morph": "^25.0.1"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.3",
    "typescript": "^5.0.0"
  }
}
